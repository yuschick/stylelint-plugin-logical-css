{
  "name": "stylelint-plugin-logical-css",
  "version": "2.0.2",
  "description": "A Stylelint plugin to enforce the use of logical CSS properties, values and units.",
  "type": "module",
  "author": "Daniel Yuschick <daniel.yuschick@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/yuschick/stylelint-plugin-logical-css",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./configs/recommended": {
      "require": "./dist/configs/recommended.cjs",
      "import": "./dist/configs/recommended.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint '**/*.{js,cjs,mjs,ts,cts,mts}'",
    "lint:fix": "eslint '**/*.{js,cjs,mjs,ts,cts,mts}' --fix",
    "release:official": "release-it --config .release-it--official.json",
    "release:dry": "release-it --dry-run",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^25.1.0",
    "csstype": "^3.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "stylelint": "^16.1.0",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.2.4",
    "vitest-stylelint-utils": "^2.0.0"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0 || ^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "keywords": [
    "css",
    "css lint",
    "logical css",
    "lint",
    "linter",
    "stylelint",
    "stylelint plugin",
    "stylelint-plugin",
    "best practices",
    "i18n",
    "internationalization"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuschick/stylelint-plugin-logical-css.git"
  },
  "bugs": {
    "url": "https://github.com/yuschick/stylelint-plugin-logical-css/issues"
  }
}
